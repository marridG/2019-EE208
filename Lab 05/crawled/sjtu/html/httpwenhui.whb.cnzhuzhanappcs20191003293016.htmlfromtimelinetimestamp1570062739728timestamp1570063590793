      var imageArr = new Array();
      var img = {
        "width":"645px",
        "height":"483px",
        "videoUrl" : ""
      }
      imageArr.push(img);
      var img = {
        "width":"645px",
        "height":"430px",
        "videoUrl" : ""
      }
      imageArr.push(img);
      var voteColors = [
        "#e3e5f1",
        "#cacdde",
        "#aaafca"
      ];
      var perVotePerW; // 100%长度
      $(document).ready(function(){
        $("#header").load("/include/header.html");
        $("#foot").load("/include/footer.html");
        var w = document.body.clientWidth - 20;
        try {
          var fontsize = w / 20; // 字数：一行18字
          document.body.style.fontSize = fontsize + "px";
          var percent = w / 720;
          $("#voteTitle").css("font-size", (percent * 30) + "px");
          $("#voteTitle").css("height", (percent * 70) + "px");
          $("#voteTitle").css("padding-top", (percent * 35) + "px");
          // 投票长度 720px 400=100%
          perVotePerW = percent * 400;
          $("#voteCon").css("font-size", (percent * 30) + "px");
          var width = percent * 125;
          var height = width / height * width;
          $(".voteimg").css("width", width + "px");
          $(".voteimg").css("height", height + "px");
        } catch (e) {}

        // $("img[name=videoImg]").click(function() {
        //   openVideo(this)
        // });

        // 图片宽度、高度
        if(imageArr.length == 0) return ;
        for(var index = 0; index < imageArr.length; index++) { 
          var img=$("#image-" + (index + 1)); 
          var width=imageArr[index].width;
          width=width.replace("px", "" ); 
          width=width.replace("PX", "" ); 
          if(width>= 645) {
            // 宽度645，直接铺满
            img.css("width", "100%");
            continue ;
          }
          // 小于645，按照比例进行缩放
          var proportion = w/645; // 宽度比例
          width = width * proportion;
          img.css("width", width + "px");

          // 专家图片
          var photo = $("#expertPhoto");
          if(photo == null || photo == undefined)
          return ;
          var photoWidth = 223 * proportion;
          photo.css("width", photoWidth + "px");
          var height = 272 * proportion;
          photo.css("height", height + "px");
        }
      });

      var play, videoIndex = 0;
      function openVideo(url) {
        try{
          // url由app替换字符串获得
          var pos1 = url.indexOf("vid=");
          if (pos1 < 0){
              alert("视频路径格式有误，无法播放!");
          }else{
            var pos2 = url.indexOf("&", pos1);
            if (pos2 < 0) pos2 = url.length;
            var vid = url.substring(pos1 + 4,pos2);
                video = new tvp.VideoInfo(),
                player = new tvp.Player();
            video.setVid(vid);
            player.create({
              width: "100%",
              height: 280,
              video: video,
              modId: "video_player",
              vodFlashExtVars: {
                showlogo:0,
                popup : 0,
                share : 0,
                follow : 0
              },
              autoplay: false,
              pic: "http://wenhui.whb.cn/u/index.jpeg"
            });
            // new Txplayer({
            //   containerId: 'video_player',
            //   vid: vid,
            //   width: "100%",
            //   height: 280,
            //   autoplay: false
            // });
          }
        }catch(e){console.debug(e.message);}
      }

      //评论
      function fnSubmit(){
        if($("#text").val().trim().length==0){
          alert("请输入评论内容");
          return ;
        }
        var text = $("#text").val();
        $.ajax({
          type: "POST",
          url:"/whb/comment.jspx",
          "dataType" : "json",
          data:{
              text:text,
              contentId:67907,
              hasCaptcha:"no"
          },
          success:myCallback
        })
      }

      function myCallback(data) {
        if(data.status==0) {
          alert("评论成功,等待审核");
          $("#text").val("");
          fnText();
          //location.href=location.href;
        } else if(data.status==1) {
          alert("验证码错误");
          //$("#commentCaptcha").click();
        } else if(data.status==2) {
          alert("内容不存在");
          //$("#commentCaptcha").click();
        } else if(data.status==3) {
          alert("评论关闭");
          //$("#commentCaptcha").click();
        } else if(data.status==4) {
          alert("需要登录评论");
          //$("#commentCaptcha").click();
        } else if(data.status==100) {
          alert("内容不存在");
          // $("#commentCaptcha").click();
        } else if(data.status==101) {
          alert("评论不能为空");
          // $("#commentCaptcha").click();
        } else {
          alert("评论失败");
          // $("#commentCaptcha").click();
        }
      }

      function fnText(){
        var length = $("#text").val().trim().length;
        $("#textcount").html(300-length);
      }
    </script>
