<script type=text/javascript>
      $(function() {
        Cms.viewCountNew(location.href,"","293016",null,null, null,null,null);
        
        // 图片浏览器
        var photos = Array.prototype.slice.call($(".content_body img")).map(function(img){return img.src});
        var photoBrowser1 = $.photoBrowser({ 
                              items: photos,
                              onOpen: function(){
                                $('video').css({display: 'none'});
                              },
                              onClose: function(){
                                $('video').show();
                              }
                            });
        $(".content_body img").on("click", function(){
          var currentSrc = $(this).attr('src'), 
              index = photos.indexOf(currentSrc),
              showIdx = index == -1 ? 0 : index;
              photoBrowser1.open(index);
        });

        $.post(
          "/whbApi/content/findContentRelated.action?contentId=293016",
          function(data){
            var relatedContents = Array.isArray(data.data.relatedContents) ? data.data.relatedContents : [];
            setContent(relatedContents, null)
          }
        )
        var videoPath = "", isVideo = "CK";
        if(videoPath && isVideo){
          openVideo(videoPath);
        }

        // 视频播放初始化
        var xgIdx = 0;
        Array.prototype.slice.call($(".content-min-ctn video")).map(function(obj, idx){
          $(obj).parent().attr('id', 'video'+ idx).css({display: "block"});
          var src = obj.src;
          if(src.indexOf("vid=") > -1){
            var pos1 = src.indexOf('vid=');
            var pos2 = src.indexOf('&', pos1) == -1 ? src.length : src.indexOf('&', pos1);
            var vid = src.substring(pos1 + 4, pos2);
            new tvp.Player().create({
                  width: "100%",
                  height: 280,
                  video: new tvp.VideoInfo().setVid(vid),
                  modId: 'video'+ idx, //mod_player是刚刚在页面添加的div容器
                  autoplay: 0,
                  pic: "http://wenhui.whb.cn/u/index.jpeg"
                });
          }else{
            $(obj).remove();
            window["palyer"+idx] = new Player({
              id: 'video'+ idx,
              url: src,
              width: "100%",
              height: 280,
              poster: "http://wenhui.whb.cn/u/index.jpeg",
              download: false,
              autoplay: false,
              controls: false,
            })  
            document.getElementById('video'+ idx).className = document.getElementById('video'+ idx).className.replace(/no-controls/ig, "").replace(/xgplayer-mobile-npassed/ig, "xgplayer-nostart");
            document.getElementsByClassName("xgplayer-start")[xgIdx].addEventListener("click", function(){
              window["palyer"+idx].play();
            });
            xgIdx++;
          }
        })
      });
      // 设置更多内容
      function setContent(contents, nightMode) {
        if (contents == null || contents == undefined || contents.length < 1) return;
        var html = "<div class='related_title'>热点新闻</div><div class='solve_float' style='padding-bottom: 15px'>";
        contents.forEach(function (content, index) {
          html += "<div class='news_item_box lf' onclick='window.location.href=\""+content.shareUrl+"\"'>"
                  +  '<div class="news_img_box">'
                  +    '<img src='+content.imageUrl+' alt='+content.title+'>'
                  +  '</div>'
                  +  '<div class="news_info_box">'
                  +    '<div class="news_title">'+ content.title +'</div>'
                  +    '<div class="news_brife flex_layout">'
                  +      '<div class="have_flex type_box">'
                  +        '<span class="badge">'+ content.channelName +'</span>'
                  +      '</div>'
                  +      '<div class="no_flex no_shrink date_box">'+ content.publishTime.slice(0, 10) +'</div>'
                  +    '</div>'
                  +  '</div>'
                  +'</div>'
        });
        html += '</div>';
        document.getElementById("relation_news_id").innerHTML = html;
      }
    </script>
