<section class="relate-news-section">

	<h2 class="relate-news-title">相关阅读</h2>
	<div class="relate-news-container"></div>
	<div class="clear"></div>
	
	<!-- 模板区域 -->
	<div id="relateItemModel" style="display:none;">
		<a class="itemLink" href="">
			<img src="" class="itemImg" />
			<span class="itemTitle"></span>
		</a>
	</div>
	
	<script type="text/javascript">
	
		$(function(){
			var nid = $("#nid").val() || 0;
			$.getJSON("/wx/getRelationNews.do?nid=" + nid, function(data){
				if (data && data.success)
				{
					var list = data.object;
					if (list && list.length > 0)
					{
						var imgBaseUrl = "https://images.shobserver.com/";
						var container = $(".relate-news-container");
						$.each(list,function(i,item){							
							var relateNewsItem = $("#relateItemModel .itemLink").clone();
							
							relateNewsItem.attr("href","/wx/detail.do?id=" + item.rid);
							relateNewsItem.find(".itemImg").attr("src", imgBaseUrl + "news/440_250/" + item.picurl);
							relateNewsItem.find(".itemTitle").text(item.rtitle);
							if (i%2 == 0)
							{
								relateNewsItem.css("margin-right","2%");
							}
							container.append(relateNewsItem);
						});
						
						$(".relate-news-section").show();
					}
				}
			});
		});
		
	</script>
</section>

