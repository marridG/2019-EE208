		$(function(){
			var nid = $("#nid").val() || 0;
			$.getJSON("/wx/getHotNews.do?nid=" + nid, function(data){
				if (data && data.success)
				{
					var list = data.object;
					if (list && list.length > 0)
					{
						var imgBaseUrl = "https://images.shobserver.com/";
						var container = $(".hot-news-container");
						$.each(list,function(i,item){
							var hotNewsItem = $("#itemModel .itemLink").clone();
							hotNewsItem.attr("href","/wx/detail.do?id=" + item.id);
							hotNewsItem.find(".itemImg").attr("src", imgBaseUrl + "news/440_250/" + item.picurl);
							hotNewsItem.find(".itemTitle").text(item.title);
							if (i%2 == 0)
							{
								hotNewsItem.css("margin-right","2%");
							}
							container.append(hotNewsItem);
						});
						
						$(".hot-news-section").show();
					}
				}
			});
		});
		
	</script>
</section>

