<script>
    var a1,a2;
    $(window).on('mouseenter','.pro-item',function(){
        a1 = $(this).find(".frontPart");
        a2 = $(this).find(".backPart");
        a1.hide().css({width:'0px', left:'133px'});
        a2.show().stop().animate({width:'267px', left:'0px'},200)

    })
    $(window).on('mouseleave','.pro-item',function(){
        a2.hide().css({width:'0px', left:'133px'})
        a1.show().stop().animate({width:'267px', left:'0px'},200)
    })
    $(function () {
        $('.leftpic,.pro-item').each(function () {
            $(this).on('inview', function(event, isVisible) {
                $(this).addClass("animated uplittle");
            });
        })
    })
