<style>
    .backPart{position: absolute; top: 0; left: 133px; opacity: 1 !important; display: none;}
    .frontPart{position: absolute;  top: 0;  left: 0;}
    .loading{width: 100%; height: 50px; background: #fff; text-align: center; line-height: 50px; font-size: 14px;}
</style>

<script>
	var n=1, loading = false, num= 9, pageSize= 0, all = false;
	
	$(document).scroll(function(){
		var scrollTop = $(document).scrollTop();
		if(scrollTop>=$(document).height()-$(window).height()){
			if (all || loading) {
				return;
			}
			$.ajax({
				url:"/download/platform_data/" + n + '/',
				type:"get",
				dataType:"json",
				cache : false,
				async:false,
				beforeSend : function () {
				},
                complete: function () {
                },
				success : function (d) {
					var items ,hts='';
			        for(var j in d){
			            items = d[j];
			            hts =items.backPart.all_num;
			        }
					var ht = Obtain(d);
                    if(d.length<num || (d.length*n >= hts)){
                        all = true;
                        loading = false;
                        $('.loading').hide();
                    }
					$('.pro-list ul').append(ht);
					n++;
				}
			});
		}
	})
    function Obtain(d){
        var item, ht = '';
        for(var i in d){
            item = d[i];
                ht+='<li class="pro-item">'+
                        '<div class="frontPart">'+
                        '<img src='+item.frontPart.src1+' alt="" class="pro-img"/>'+
                        '<div class="pro-info">'+
                        '<i class="arrow"></i>'+
                        '<img src='+item.frontPart.src2+' alt=""/>'+
                        '<p class="smlline nowrap">'+item.frontPart.p1+'</p>'+
                        '<p class="biggerline nowrap">'+item.frontPart.p2+'</p>'+
                        '</div>'+'</div>'+
                        '<div class="backPart">'+
                        '<img src='+item.backPart.src1+' alt="">'+
                        '<a href="'+item.backPart.a1+'" target="_blank" class="back-down-btn ios"></a>'+
                        '<a href="'+item.backPart.a2+'" target="_blank" class="back-down-btn and"></a>'+
                        '</div>'+
                        '</li>'+
                        '<li class="interval"></li>';
            
        }
        return ht;
    }
</script>
